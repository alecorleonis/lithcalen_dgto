<% if !current_user %>
<h1>Iniciar Sesion</h1>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :Correo %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :Contrasena %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag "Iniciar Sesion" %></p>
<% end %>
<% else %>
	<% lista = List.new %>
	<% lista.user_id = current_user.id %>
	<%= controller.redirect_to lists_path(:user => lista.user_id) %>
<% end %>
